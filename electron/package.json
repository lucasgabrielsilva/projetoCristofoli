{
  "name": "Cristofoli",
  "homepage": "https://www.cristofoli.com",
  "version": "1.0.0",
  "description": "Projeto de comunicação com a autoclave",
  "main": "./minify/main.js",
  "author": "Cristófoli Biossegurança LTDA <lucas_gabrielsilva@hotmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "dist": "electron-builder --win --x64",
    "dist32": "electron-builder --win --ia32",
    "minify": "gulp minify"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@babel/runtime": "^7.12.5",
    "babel-loader": "^8.2.2",
    "electron": "^11.1.0",
    "electron-builder": "^22.8.0",
    "electron-rebuild": "^2.3.2",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-javascript-obfuscator": "^1.1.6",
    "gulp-uglify": "^3.0.2"
  },
  "build": {
    "productName": "Cristófoli Autoclave Manager",
    "files": [
      "./front/**/*",
      "./src/**/*",
      "./assets/*",
      "node_modules/**/*"
    ],
    "win": {
      "appId": "com.cristofoli.manager",
      "target": "nsis",
      "icon": "./assets/LogoCristofoli.ico"
    },
    "nsis": {
      "oneClick": "false",
      "perMachine": "false",
      "license": "./license.txt",
      "installerIcon": "./assets/LogoCristofoli.ico",
      "installerSidebar": "./assets/LogoCristofoli.bmp"
    },
    "linux": {
      "appId": "com.cristofoli.manager",
      "target": "deb"
    }
  },
  "dependencies": {
    "axios": "^0.21.0",
    "fast-csv": "^4.3.2",
    "moment": "^2.29.1",
    "nodemailer": "^6.4.17",
    "serialport": "^9.0.2"
  }
}
